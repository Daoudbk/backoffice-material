<div ng-controller="DashboardCtrl">

	<div layout="row">

		<md-sidenav class="md-sidenav-left md-whiteframe-z2" md-component-id="left" md-is-locked-open="$mdMedia('gt-md')">
	      	<md-toolbar class="md-theme-indigo">
	        	<h1 class="md-toolbar-tools">Sidenav Left</h1>
	      	</md-toolbar>

	      	<md-list ng-controller="TestCtrl">

  <md-subheader class="md-no-sticky">Clickable Items with Secondary Controls</md-subheader>
  <md-list-item ng-click="navigateTo('data usage', $event)">
    <md-icon md-svg-icon="cached"></md-icon>
    <p>Data Usage</p>
  </md-list-item>
  
  
  <md-divider></md-divider>

</md-list>


	    </md-sidenav>

	    <div layout="column" layout-fill>

	    	<md-toolbar>
		    	<div class="md-toolbar-tools">
		      		<span>Backoffice</span>
		      		<!-- fill up the space between left and right area -->
		      		<span flex></span>
			      	<md-button>
			        	Right Bar Button
			      	</md-button>
		    	</div>
		  	</md-toolbar>

		  	<md-content flex layout-padding>
	      		<div layout="column" layout-fill layout-align="top center">
	        		<div>
	          			<md-button ng-click="toggleRight()" class="md-primary">Toggle right</md-button>
	        		</div>
	      		</div>
	      		<div flex></div>
	    	</md-content>

	    </div>

	    <md-sidenav class="md-sidenav-right md-whiteframe-z2" md-component-id="right">

      		<md-toolbar class="md-theme-light">
        		<h1 class="md-toolbar-tools">Sidenav Right</h1>
      		</md-toolbar>

      		<md-content ng-controller="RightCtrl" layout-padding>
        		<form>
          			<md-input-container>
            			<label for="testInput">Test input</label>
            			<input type="text" id="testInput" ng-model="data" md-sidenav-focus>
          			</md-input-container>
        		</form>
		        <md-button ng-click="close()" class="md-primary">
		          	Close Sidenav Right
		        </md-button>
      		</md-content>

    	</md-sidenav>

	</div>







	    

    	

    	
  </section>
</div>