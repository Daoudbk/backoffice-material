<div ui-view="about">
	
	<div layout="column" layout-padding layout-margin>
		
		<md-content layout="row" layout-sm="column" layout="space-between center">

			<div flex layout="row" layout-sm="column" layout-align="start center">
				<div layout-margin ><h1>About Me</h1></div>
				<div layout-margin ><span>basic data form </span></div>
			</div>

			<div flex layout="row" layout-align="end center">
		      	<div layout-margin ><md-button class="md-raised md-primary">Update</md-button></div>
			</div>
				
		</md-content>

		<md-content layout-padding layout-fill>
			<form name="userForm">
	
				<md-divider class="about-top"></md-divider>

				<h3>Contact</h3>

				<div layout layout-sm="column">
					<md-input-container flex>
						<label>Username</label>
						<input ng-model="portfolio.username">
					</md-input-container>
					<md-input-container flex>
						<label>Github</label>
						<input ng-model="portfolio.github">
					</md-input-container>
				</div>

				<div layout layout-sm="column">
					<md-input-container flex>
						<label>Email</label>
						<input ng-model="portfolio.email">
					</md-input-container>
					<md-input-container flex>
						<label>Linkedin</label>
						<input ng-model="portfolio.linkedin">
					</md-input-container>
				</div>

				<md-divider class="about-top"></md-divider>

				<h3>Information</h3>

				<md-input-container flex>
					<label>First Column</label>
					<textarea ng-model="portfolio.firstColumn" columns="1" md-maxlength="500"></textarea>
				</md-input-container>

				<md-input-container flex>
					<label>Second Column</label>
					<textarea ng-model="portfolio.secondColumn" columns="1" md-maxlength="500"></textarea>
				</md-input-container>

				<md-input-container flex>
					<label>Third Column</label>
					<textarea ng-model="portfolio.thirdColumn" columns="1" md-maxlength="500"></textarea>
				</md-input-container>

			</form>
		</md-content>

	</div>

</div>