<div ng-controller="LoginCtrl" layout="column">

  	<md-content class="loginBoxTopMargin">

  		<div layout="row" layout-sm="column" layout-align="center center">

		  	<div flex="30">
		  		
			    	<md-content layout-padding>
					    <form name="userForm" novalidate>
					      
					      	<div layout="column" layout-sm="column">

						      	<md-content>
						      		<h1 class="md-display-2">Sign In</h1>
						      	</md-content>

					        	<md-input-container flex>
					          		<label>Email</label>
					          		<input ng-model="user.email" type="email" required>
					        	</md-input-container>

		        				<md-input-container flex>
					          		<label>Password</label>
					          		<input ng-model="user.password" type="password" required>
					        	</md-input-container>

					      		<section layout="row" layout-sm="column">

					      			<div flex>
					      				<div layout layout-align="start center">
					      					<md-button class="md-raised">Register</md-button>
					      				</div>
					      			</div>

					      			<div flex>
					      				<div layout layout-align="end center">
					      					<md-button class="md-raised md-primary">Log In</md-button>
					      				</div>
					      			</div>
							      	
							    </section>
						      	</md-content>

					      	</div>
					      
					    </form>
				  	</md-content>

		  	</div>

		</div>

  	</md-content>

</div>