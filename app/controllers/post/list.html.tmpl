<div ng-controller="PostListCtrl" class="table-container">
 
  	<div class="table-responsive-vertical shadow-z-1">
  		<!-- Table starts here -->
  		<table id="table" class="table table-hover table-mc-light-blue table-bordered">
			<thead>
				<tr>
					<th>ID</th>
					<th>Title</th>
					<th>Category</th>
					<th>Content</th>
					<th>Author</th>
					<th>Created</th>
					<th>Actions</th>
				</tr>
			</thead>

			<tbody>
				<tr ng-repeat="post in posts">
					<td felx data-title="ID">{{ $index+1 }}</td>
					<td flex data-title="Title">{{ post.title }}</td>
					<td flex data-title="Category">{{ post.category }}</td>
					<td flex data-title="Content">{{ post.content }}</td>
					<td flex data-title="Author">{{ post.author }}</td>
					<td flex data-title="Created">{{ post.created }}</td>
					<td flex data-title="Actions">
						<div layout="row" layout-align="space-around center">
							<md-button class="md-raised md-default-theme">Edit</md-button>
							<div flex="5"></div>
							<md-button class="md-raised md-warn md-default-theme">Delete</md-button>
						</div>
					</td>
				</tr>
				

			</tbody>
		</table>
	</div>
  
</div>